<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageViewDiamond"
        android:layout_margin="10dp"
        tools:src="@drawable/red_diamond" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewColor"
        android:layout_toRightOf="@+id/imageViewDiamond"
        android:layout_margin="10dp"
        android:textSize="25sp"
        tools:textColor="#F00"
        tools:text="Red Diamond" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCarat"
        android:layout_below="@+id/textViewColor"
        android:layout_alignLeft="@+id/textViewColor"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="5.978 Ct." />

</RelativeLayout>