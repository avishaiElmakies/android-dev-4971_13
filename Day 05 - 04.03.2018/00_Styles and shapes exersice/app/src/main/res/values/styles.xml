<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="textViewStyle" >
        <item name="android:layout_width">@dimen/circleSize</item>
        <item name="android:layout_height">@dimen/circleSize</item>
        <item name="android:layout_margin">@dimen/editTextMargin</item>
        <item name="android:textColor">@color/editTextTextColor</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/anyTextSize</item>
    </style>


    <style name="textViewWelcome" parent="textViewStyle">
        <item name="android:textColor">@color/editTextBackground0</item>
    </style>
<style name="textViewHello" parent="textViewStyle">
    <item name="android:textColor">@color/editTextBackground1</item>
</style>
    <style name="textViewBey" parent="textViewStyle">
        <item name="android:textColor">@color/editTextBackground2</item>
    </style>
</resources>
